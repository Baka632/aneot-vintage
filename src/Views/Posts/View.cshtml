@using AnEoT.Vintage.Models;
@using AnEoT.Vintage.ViewModels.Posts
@using Westwind.AspNetCore.Markdown;
@model ViewViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    @if (Model.PostInfo.Article)
    {
        PostInfo postInfo = Model.PostInfo;
        <div>
            <span>作者： @postInfo.Author</span>
            <br />
            <span>日期： @(DateOnly.Parse(postInfo.Date!))</span>
            <br />
            <span>
                分类：@foreach (string item in postInfo.Category!)
                {
                    <span style="margin: 0 auto 0 0;">@item</span>
                }
            </span>
            <br />
            <span>
                标签：@foreach (string item in postInfo.Tag!)
                {
                    <span style="margin: 0 auto 0 0;">@item</span>
                }
            </span>
        </div>
        <hr />
    }
    else
    {
        <div>
            作者： Another End of Terra
        </div>
        <hr/>
    }
</div>

@Markdown.ParseHtmlString(Model.Markdown)
